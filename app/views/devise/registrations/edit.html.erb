<% content_for :title, "Edit Profile" %>
<div class="mx-auto md:w-2/3 w-full">
  <h1>Edit Profile</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "contents") do |f| %>
    <%= render "shared/active_record_errors", resource: resource %>
    
    <div class="my-5">
      <%= f.label :email, "Email address", class: "block font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, 
                      autofocus: true, 
                      autocomplete: "email", 
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                      required: true,
                      placeholder: "Enter your email address" %>
    </div>
    
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="my-5 bg-blue-50 text-blue-800 px-3 py-2 rounded-lg">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>
    
    <div class="my-5">
      <%= f.label :password, class: "block font-medium text-gray-700 mb-1" do %>
        Password 
        <span class="text-sm text-gray-500">(leave blank if you don't want to change it)</span>
        <% if @minimum_password_length %>
          <br><span class="text-sm text-gray-500"><%= @minimum_password_length %> characters minimum</span>
        <% end %>
      <% end %>
      <%= f.password_field :password, 
                         autocomplete: "new-password", 
                         class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                         placeholder: "Enter new password" %>
    </div>
    
    <div class="my-5">
      <%= f.label :password_confirmation, "Confirm new password", class: "block font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, 
                         autocomplete: "new-password", 
                         class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                         placeholder: "Confirm new password" %>
    </div>
    
    <div class="my-5">
      <%= f.label :current_password, class: "block font-medium text-gray-700 mb-1" do %>
        Current password 
        <span class="text-sm text-gray-500">(we need your current password to confirm your changes)</span>
      <% end %>
      <%= f.password_field :current_password, 
                         autocomplete: "current-password", 
                         class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                         required: true,
                         placeholder: "Enter your current password" %>
    </div>
    
    <div class="button-group-container">
      <%= f.submit "Update Profile", class: "submit-button" %>
      <%= link_to "Back", request.referer || root_path, class: "back-button whitespace-nowrap" %>
    </div>
  <% end %>
  
  <div class="mt-12 border-t border-gray-200 pt-8">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Cancel my account</h3>
    <p class="text-gray-600 mb-4">Unhappy with HealthAIde? You can cancel your account below.</p>
    <%= button_to "Cancel my account", registration_path(resource_name),
        class: "delete-button",
        form_class: "inline-flex",
        data: { confirm: "Are you sure? This action cannot be undone.", turbo_confirm: "Are you sure? This action cannot be undone." },
        method: :delete %>
  </div>
</div>
