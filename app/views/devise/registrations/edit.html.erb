<% content_for :title, "Edit Profile" %>
<div class="mx-auto max-w-4xl px-4 py-8">
  <div class="px-0 py-4 mb-6 border-b border-gray-200">
    <h1>Edit Profile</h1>
    <p class="mt-1 text-sm text-gray-600">Update your account information and preferences</p>
  </div>
  <div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, class: "space-y-8") do |f| %>
      <%# Account Information Section %>
      <div class="bg-white rounded-lg shadow-sm mb-8">
        <%= render "shared/active_record_errors", resource: resource %>
        <%= render(Grids::HeaderComponent.new(columns: [ "Account Information" ])) %>
        <div class="p-6 space-y-6">
          <div>
            <%= f.label :email, "Email address", class: "block text-lg font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email,
                            autofocus: true,
                            autocomplete: "email",
                            required: true,
                            placeholder: "Enter your email address",
                            class: "w-full" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="bg-blue-50 text-blue-800 px-4 py-3 rounded-lg border border-blue-200">
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-sm">Currently waiting confirmation for: <strong><%= resource.unconfirmed_email %></strong></span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <%# Password Section %>
      <div class="bg-white rounded-lg shadow-sm mb-8">
        <%= render(Grids::HeaderComponent.new(columns: [ "Password" ])) %>
        <div class="p-6 space-y-6">
          <div>
            <%= f.label :password, class: "block text-lg font-medium text-gray-700 mb-1" do %>
              New Password
              <span class="text-sm text-gray-500 font-normal">(leave blank if you don't want to change it)</span>
            <% end %>
            <%= f.password_field :password,
                                autocomplete: "new-password",
                                placeholder: "Enter new password",
                                class: "w-full" %>
            <% if @minimum_password_length %>
              <p class="text-sm text-gray-500 mt-1">Minimum <%= @minimum_password_length %> characters required</p>
            <% end %>
          </div>
          <div>
            <%= f.label :password_confirmation, "Confirm New Password", class: "block text-lg font-medium text-gray-700 mb-1" %>
            <%= f.password_field :password_confirmation,
                                autocomplete: "new-password",
                                placeholder: "Confirm new password",
                                class: "w-full" %>
          </div>
        </div>
      </div>
      <%# AI Configuration Section %>
      <%= f.fields_for :profile do |profile_f| %>
        <div class="bg-white rounded-lg shadow-sm mb-8"
              data-controller="ai-provider"
              data-ai-provider-models-value="<%= Ai::Provider::AI_PROVIDER_MODELS.to_json %>"
              data-ai-provider-current-provider-value="<%= resource.profile.ai_provider %>"
              data-ai-provider-current-model-value="<%= resource.profile.ai_provider_model %>"
              data-ai-provider-current-api-key-value="<%= resource.profile.ai_provider_api_key %>">
          <%= render(Grids::HeaderComponent.new(columns: [ "AI Configuration" ])) %>
          <div class="p-6 space-y-6">
            <div>
              <%= profile_f.label :ai_provider, "AI Provider", class: "block text-lg font-medium text-gray-700 mb-1" %>
              <%= profile_f.select :ai_provider,
                                  options_for_select(
                                    Ai::Provider::ALL_AI_PROVIDERS.map { |provider| [ provider.humanize, provider ] },
                                    resource.profile.ai_provider
                                  ),
                                  { prompt: "Select an AI provider" },
                                  {
                                    class: "w-full",
                                    data: {
                                      ai_provider_target: "provider",
                                      action: "change->ai-provider#providerChanged"
                                    }
                                  } %>
            </div>
            <div>
              <%= profile_f.label :ai_provider_model, "AI Model", class: "block text-lg font-medium text-gray-700 mb-1" %>
              <%= profile_f.select :ai_provider_model,
                                  options_for_select([ [ "Select a model", "" ] ]),
                                  { prompt: "Select a model" },
                                  {
                                    class: "w-full",
                                    data: { ai_provider_target: "model" }
                                  } %>
            </div>
            <div>
              <%= profile_f.label :ai_provider_api_key, "API Key", class: "block text-lg font-medium text-gray-700 mb-1" %>
              <%= profile_f.text_area :ai_provider_api_key,
                                      rows: 3,
                                      class: "resize-none w-full",
                                      value: resource.profile.ai_provider_api_key,
                                      placeholder: "Enter your API key",
                                      autocomplete: "off",
                                      data: { ai_provider_target: "apiKey" } %>
              <p class="text-sm text-gray-500 mt-1">Your API key is encrypted and stored securely</p>
            </div>
          </div>
        </div>
      <% end %>
      <%# Current Password/Submit Form Section %>
      <div class="space-y-6">
        <div>
          <%= f.label :current_password, class: "block text-lg font-medium text-gray-700 mb-1" do %>
            Current Password <span class="text-red-500">*</span>
            <span class="text-sm text-gray-500 font-normal">(required to confirm changes)</span>
          <% end %>
          <%= f.password_field :current_password,
                              autocomplete: "current-password",
                              required: true,
                              placeholder: "Enter your current password",
                              class: "w-full" %>
        </div>
        <div class="flex items-center justify-between pt-6 border-t border-gray-200">
          <div class="button-group-container">
            <%= f.submit "Update Profile", class: "submit-button bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-lg transition-colors" %>
            <%= link_to "Back", request.referer || root_path, class: "back-button text-gray-600 hover:text-gray-800 font-medium py-2 px-4 rounded-lg transition-colors" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%# Account Deletion Section %>
  <div class="bg-white rounded-lg shadow-sm mt-8 border border-red-200">
    <%= render(Grids::HeaderComponent.new(columns: [ "Danger Zone" ], header_grid_cols_css: "bg-red-700")) %>
    <div class="p-6">
      <h3 class="text-lg font-medium text-gray-900 mb-2">Cancel Account</h3>
      <p class="text-gray-600 mb-4">
        Unhappy with HealthAIde? You can permanently delete your account and all associated data.
        <strong class="text-red-700">This action cannot be undone.</strong>
      </p>
      <%= button_to "Cancel my account", registration_path(resource_name),
          class: "bg-red-700 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-lg transition-colors",
          form_class: "inline-flex",
          data: { confirm: "Are you sure? This action cannot be undone.", turbo_confirm: "Are you sure? This action cannot be undone." },
          method: :delete %>
    </div>
  </div>
</div>
