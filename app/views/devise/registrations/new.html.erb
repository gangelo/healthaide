<% content_for :title, "Sign up" %>
<div class="mx-auto md:w-2/3 w-full">
  <h1>Sign up</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "contents") do |f| %>
    <%= render "shared/active_record_errors", resource: resource %>
    <div class="my-5">
      <%= f.label :first_name, "First name", class: "block font-medium text-gray-700 mb-1" %>
      <%= f.text_field :first_name,
                    autofocus: true,
                    autocomplete: "given-name",
                    required: true,
                    placeholder: "Enter your first name" %>
    </div>
    <div class="my-5">
      <%= f.label :last_name, "Last name", class: "block font-medium text-gray-700 mb-1" %>
      <%= f.text_field :last_name,
                    autocomplete: "family-name",
                    required: true,
                    placeholder: "Enter your last name" %>
    </div>
    <div class="my-5">
      <%= f.label :email, "Email address", class: "block font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email,
                      autocomplete: "email",
                      required: true,
                      placeholder: "Enter your email address" %>
    </div>
    <div class="my-5">
      <%= f.label :username, "Username", class: "block font-medium text-gray-700 mb-1" %>
      <%= f.text_field :username,
                    autocomplete: "username",
                    required: true,
                    placeholder: "Choose a username" %>
    </div>
    <div class="my-5">
      <%= f.label :password, class: "block font-medium text-gray-700 mb-1" do %>
        Password
        <% if @minimum_password_length %>
          <span class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
      <% end %>
      <%= f.password_field :password,
                         autocomplete: "new-password",
                         required: true,
                         placeholder: "Enter your password" %>
    </div>
    <div class="my-5">
      <%= f.label :password_confirmation, "Confirm password", class: "block font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation,
                         autocomplete: "new-password",
                         required: true,
                         placeholder: "Confirm your password" %>
    </div>
    <div class="button-group-container">
      <%= f.submit "Sign up", class: "submit-button" %>
      <%= link_to "Back to sign in", new_session_path(resource_name), class: "back-button whitespace-nowrap" %>
    </div>
  <% end %>
  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
