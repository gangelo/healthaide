<% content_for :title, "Change password" %>
<div class="mx-auto md:w-2/3 w-full">
  <h1>Change your password</h1>
  <p class="text-gray-600 mb-6">Enter your new password below.</p>
  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "contents") do |f| %>
    <%= render "shared/active_record_errors", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    
    <div class="my-5">
      <%= f.label :password, class: "block font-medium text-gray-700 mb-1" do %>
        New password
        <% if @minimum_password_length %>
          <span class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
        <% end %>
      <% end %>
      <%= f.password_field :password, 
                         autofocus: true, 
                         autocomplete: "new-password", 
                         class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                         required: true,
                         placeholder: "Enter your new password" %>
    </div>
    
    <div class="my-5">
      <%= f.label :password_confirmation, "Confirm new password", class: "block font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, 
                         autocomplete: "new-password", 
                         class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500",
                         required: true,
                         placeholder: "Confirm your new password" %>
    </div>
    
    <div class="button-group-container">
      <%= f.submit "Change my password", class: "submit-button" %>
      <%= link_to "Back to sign in", new_session_path(resource_name), class: "back-button whitespace-nowrap" %>
    </div>
  <% end %>
  
  <div class="mt-6 text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
