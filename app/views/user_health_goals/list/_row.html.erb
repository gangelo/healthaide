<ul role="list">
  <% user_health_goals.each_with_index do |user_health_goal, index| %>
    <li class="relative px-4 py-3 sm:px-6 grid grid-cols-3 gap-4 <%= index.odd? ? 'bg-gray-50' : 'bg-white' %> hover:bg-gray-100">
      <div>
        <%= render HealthGoals::BadgeComponent.new(name: user_health_goal.health_goal.health_goal_name) %>
      </div>
      <div class="text-sm text-gray-700">
        <%= user_health_goal.order_of_importance %>
      </div>
      <div class="text-right flex justify-end gap-2">
        <%= link_to "Show", user_health_goal_path(user_health_goal), class: "rounded-lg py-2 px-4 text-gray-700 bg-gray-200 hover:bg-gray-300 font-medium" %>
        <%= link_to "Edit", edit_user_health_goal_path(user_health_goal), class: "rounded-lg py-2 px-4 text-gray-700 bg-gray-200 hover:bg-gray-300 font-medium" %>
        <%= button_to "Delete", user_health_goal_path(user_health_goal),
                    method: :delete,
                    class: "rounded-lg py-2 px-4 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer",
                    form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    </li>
  <% end %>
</ul>