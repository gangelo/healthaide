<% content_for :title, "My Health Goals" %>
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <%= turbo_frame_tag "flash_messages" do %>
    <%= render "shared/flash_messages" %>
  <% end %>
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2>My Health Goals</h2>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= render partial: "shared/add_new_user_item_link",
          locals: {
            link_path: new_user_health_goal_path,
            link_text: "Add Health Goal",
          } %>
    </div>
  </div>
  <%= turbo_frame_tag "user_health_goals_list" do %>
    <%= render "user_health_goals_list", user_health_goals: @user_health_goals %>
  <% end %>
  <%= turbo_frame_tag "modal" %>
</div>
