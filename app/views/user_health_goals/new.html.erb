<% content_for :title, "Add Health Goal" %>
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <%= turbo_frame_tag "flash_messages" do %>
    <%= render "shared/flash_messages" %>
  <% end %>
  <%= render partial: "shared/active_record_errors", locals: { resource: @user_health_goal } %>
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2>Add Health Goal</h2>
      <p class="mt-1 text-sm text-gray-500 max-w-3xl">Choose from one of the following options to add health goals to your personal list.</p>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to "Back to My Health Goals",
          user_health_goals_path,
          class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Add Multiple Health Goals Card -->
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6 flex flex-col">
      <div>
        <%= render partial: "shared/icons/add_multiple" %>
        <h3 class="mt-4 text-lg font-semibold leading-6 text-gray-900">Add Multiple Health Goals</h3>
        <p class="mt-2 text-sm text-gray-500">Select multiple health goals from our database to add to your list at once.</p>
      </div>
      <div class="mt-auto pt-6">
        <%= button_to "Select Multiple Health Goals",
            select_multiple_user_health_goals_path,
            method: :get,
            class: "choose-multiple-button w-full rounded-md bg-blue-600 py-2 px-4 text-white font-medium hover:bg-blue-500",
            data: { turbo_frame: "modal" } %>
      </div>
    </div>
    <!-- Select Existing Health Goal Card -->
    <div id="select-existing-goal" class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6 flex flex-col">
      <div>
        <%= render partial: "shared/icons/select_existing" %>
        <h3 class="mt-4 text-lg font-semibold leading-6 text-gray-900">Select Existing Health Goal</h3>
        <p class="mt-2 text-sm text-gray-500">Choose a single health goal from our database to add to your list.</p>
      </div>
      <div class="mt-auto pt-6">
        <%= render partial: "select_existing_goal", locals: { user_health_goal: @user_health_goal } %>
      </div>
    </div>
    <!-- Create New Health Goal Card -->
    <div id="create-new-goal" class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6 flex flex-col">
      <div>
        <%= render partial: "shared/icons/create_new" %>
        <h3 class="mt-4 text-lg font-semibold leading-6 text-gray-900">Create New Health Goal</h3>
        <p class="mt-2 text-sm text-gray-500">Add a new health goal that doesn't exist in our database yet.</p>
      </div>
      <div class="mt-auto pt-6">
        <%= render partial: "create_new_goal" %>
      </div>
    </div>
  </div>
  <%= turbo_frame_tag "modal" %>
</div>
