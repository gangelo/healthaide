<% if user_supplement.supplement_components.empty? %>
  <div class="border-t border-gray-200 px-4 py-5 sm:p-6 text-center text-gray-500">
    No components added yet. Use the "Add Component" button to add ingredients.
  </div>
<% else %>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Amount</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit</th>
          <th scope="col" class="relative px-6 py-3">
            <span class="sr-only">Actions</span>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% user_supplement.supplement_components.each do |component| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= component.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= component.amount %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= component.unit %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= button_to remove_component_user_supplement_path(user_supplement, component_id: component.id), 
                            method: :delete, 
                            form: { data: { turbo_confirm: "Are you sure you want to remove this component?" } },
                            class: "text-red-600 hover:text-red-900" do %>
                <%= render "shared/icons/trash_can", size: 4 %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>