<% content_for :title, "My Supplements" %>
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <!-- Flash messages outside of Turbo Frames -->
  <div id="flash_messages">
    <%= render "shared/flash_messages" %>
  </div>
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2>My Supplements</h2>
      <p class="mt-1 text-sm text-gray-500 max-w-3xl">
        Track your supplements by adding them here.
      </p>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to new_user_supplement_path,
          class: "add-new-button",
          data: { turbo_frame: "_top" } do %>
        <%= render partial: "shared/icons/plus_sign" %>
        Add Supplement
      <% end %>
    </div>
  </div>
  <!-- Single content frame -->
  <%= turbo_frame_tag "main_content" do %>
    <%= render "user_supplements/list/list", user_supplements: @user_supplements %>
  <% end %>
</div>
