<% if @import_user.present? %>
  <div class="bg-white shadow-md ring-1 ring-gray-900/5 rounded-xl overflow-hidden">
    <div class="px-6 py-6">
      <h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">Import Selected User</h3>
      
      <%= form_with url: import_path,
                method: :post,
                data: {
                  turbo_confirm: "Import the selected user?",
                  turbo: true
                } do |form| %>
        <%= form.hidden_field :import_user_id, value: @import_user&.id %>
        <%= form.hidden_field :import_user_json, value: @import_user_json %>

        <div class="text-sm text-gray-700 mb-4">
          You are about to import data for <%= @import_user.username %>. Click the button below to proceed.
        </div>

        <div class="flex justify-center">
          <%= form.button type: "submit",
              class: "submit-button",
              data: { import_check_boxes_target: "submitButton" } do %>
              <span class="inline-flex items-center">
                <%= render Icons::ImportComponent.new(css_class: "h-5 w-5 mr-2") %>
                Import User Data
              </span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
