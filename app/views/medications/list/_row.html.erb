<ul role="list">
  <% medications.each_with_index do |medication, index| %>
    <li class="relative px-4 py-3 sm:px-6 grid grid-cols-2 gap-4 <%= grid_alternate_row_color(index) %>">
      <div class="text-sm font-semibold text-gray-900">
        <%= medication.medication_name %>
      </div>
      <div class="text-right">
        <div class="flex justify-end gap-2">
          <%= link_to "Show", medication_path(medication),
                      class: "show-button-sm",
                      data: { turbo_frame: "_top" } %>
          <%= button_to "Delete", medication_path(medication),
                        method: :delete,
                        disabled: medication.user_medications.count.positive?,
                        class: "delete-button-sm",
                        form: { data: { turbo_confirm: "Are you sure? This will remove the medication from all users who are using it." } } %>
        </div>
      </div>
    </li>
  <% end %>
</ul>