<ul role="list">
  <% user_health_conditions.each_with_index do |user_health_condition, index| %>
    <li class="relative px-4 py-3 sm:px-6 grid grid-cols-2 gap-4 <%= grid_alternate_row_color(index) %>">
      <div class="text-sm font-semibold text-gray-900">
        <%= user_health_condition.health_condition_name %>
      </div>
      <div class="text-right flex justify-end gap-2">
        <%= button_to "Delete", user_health_condition_path(user_health_condition),
                    method: :delete,
                    class: "delete-button-sm",
                    form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    </li>
  <% end %>
</ul>
