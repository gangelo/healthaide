<% content_for :title, "Select Health Conditions" %>
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <%= turbo_frame_tag "flash_messages" do %>
    <%= render "shared/flash_messages" %>
  <% end %>

  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Select Health Conditions</h2>
      <p class="mt-1 text-sm text-gray-500 max-w-3xl">Choose health conditions to add to your profile.</p>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to "Back to My Health Conditions",
          user_health_conditions_path,
          class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <%= render partial: "multiple_conditions_modal", locals: { health_conditions: @health_conditions } %>
</div>