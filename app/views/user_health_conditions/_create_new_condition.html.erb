<%= form_with(model: @user_health_condition, id: "create-add-new-form", url: user_health_conditions_path, class: "w-full") do |form| %>
  <div class="mb-4">
    <%= form.text_field :new_health_condition_name,
        placeholder: "Enter new health condition name",
        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
  </div>
  <%= form.submit "Create & Add New Health Condition",
      class: "create-and-add-new-button" %>
<% end %>
