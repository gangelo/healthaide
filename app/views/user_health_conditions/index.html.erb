<% content_for :title, "My Health Conditions" %>
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <!-- Flash messages outside of Turbo Frames -->
  <div id="flash_messages">
    <%= render "shared/flash_messages" %>
  </div>
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2>My Health Conditions</h2>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0 space-x-3">
      <%= render partial: "shared/add_new_user_item_link",
          locals: {
            link_path: new_user_health_condition_path,
            link_text: "Add Health Condition",
          } %>
    </div>
  </div>
  <!-- Single content frame -->
  <%= turbo_frame_tag "main_content" do %>
    <%= render "user_health_conditions/list/list", user_health_conditions: @user_health_conditions %>
  <% end %>
</div>
