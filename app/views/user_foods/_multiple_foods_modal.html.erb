<div class="flex min-h-full items-center justify-center p-4 text-center">
  <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-2xl">
    <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
      <div class="absolute right-0 top-0 pr-4 pt-4">
        <button type="button" class="text-gray-400 hover:text-gray-500" data-action="click->modal#close">
          <span class="sr-only">Close</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="sm:flex sm:items-start">
        <div class="w-full">
          <h3 class="text-lg font-semibold leading-6 text-gray-900 mb-4">Select Foods</h3>

          <div class="mb-4">
            <input type="text"
                   class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                   placeholder="Search foods..."
                   autocomplete="off"
                   data-action="input->modal#filterFoods">
          </div>

          <div class="mb-4 flex justify-between items-center text-sm">
            <div>
              <button type="button"
                      class="text-blue-600 hover:text-blue-800"
                      data-action="click->modal#selectAll">Select All</button>
              <span class="mx-2">|</span>
              <button type="button"
                      class="text-blue-600 hover:text-blue-800"
                      data-action="click->modal#selectNone">Select None</button>
            </div>
            <div class="text-gray-500" data-modal-target="selectionCount">
              0 foods selected
            </div>
          </div>

          <div class="max-h-96 overflow-y-auto border border-gray-200 rounded-md">
            <div class="divide-y divide-gray-200" data-modal-target="foodList">
              <% Food.ordered.where.not(id: current_user.user_foods.pluck(:food_id)).each do |food| %>
                <div class="flex items-center px-4 py-3 hover:bg-gray-50" data-food-name="<%= food.food_name.downcase %>">
                  <input type="checkbox"
                         name="user_food[food_ids][]"
                         value="<%= food.id %>"
                         id="food_<%= food.id %>"
                         class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                         data-action="change->modal#updateCount">
                  <label for="food_<%= food.id %>" class="ml-3 block text-sm font-medium text-gray-700">
                    <%= food.food_name %>
                  </label>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
      <%= form_with(url: add_multiple_user_foods_path, method: :post, data: { turbo: false }) do |form| %>
        <button type="submit"
                class="inline-flex w-full justify-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 sm:ml-3 sm:w-auto">
          Add Selected Foods
        </button>
        <button type="button"
                class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto"
                data-action="click->modal#close">
          Cancel
        </button>
      <% end %>
    </div>
  </div>
</div>
