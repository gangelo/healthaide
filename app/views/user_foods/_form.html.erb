<%= form_with(model: user_food) do |form| %>
  <% if user_food.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(user_food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% user_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div data-controller="modal">
    <div class="bg-white shadow-lg rounded-lg px-8 pt-6 pb-8 mb-4">
      <div class="space-y-6">
        <div>
          <h3 class="text-sm font-medium text-gray-700 mb-2">Select Multiple Foods</h3>
          <button type="button"
                  class="w-full rounded-lg py-3 px-5 bg-gray-100 text-gray-900 font-medium hover:bg-gray-50 transition-colors"
                  data-action="click->modal#open"
                  data-modal-target="openButton">
            Choose Multiple Foods
          </button>
        </div>

        <div class="relative">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center">
            <span class="bg-white px-3 text-base font-semibold leading-6 text-gray-900">Or</span>
          </div>
        </div>

        <div>
          <h3 class="text-sm font-medium text-gray-700 mb-2">Select Existing Food</h3>
          <div class="relative">
            <%= form.collection_select :food_id,
                Food.ordered.where.not(id: current_user.user_foods.pluck(:food_id)),
                :id,
                :food_name,
                { prompt: "Select a food..." },
                class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
          </div>
        </div>

        <div class="relative">
          <div class="absolute inset-0 flex items-center" aria-hidden="true">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center">
            <span class="bg-white px-3 text-base font-semibold leading-6 text-gray-900">Or</span>
          </div>
        </div>

        <div>
          <h3 class="text-sm font-medium text-gray-700 mb-2">Create New Food</h3>
          <%= form.text_field :new_food_name,
              placeholder: "Enter new food name",
              class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
        </div>
      </div>

      <div class="mt-6">
        <%= form.submit "Add Food",
            class: "w-full rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer hover:bg-blue-500 transition-colors" %>
      </div>
    </div>

    <div id="multiple-foods-modal"
         class="hidden fixed inset-0 bg-black/50 overflow-y-auto h-full w-full backdrop-blur-sm z-50"
         data-modal-target="modal"
         data-action="click->modal#clickOutside">
      <%= render "multiple_foods_modal", foods: @foods %>
    </div>
  </div>
<% end %>
