<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- Add Multiple Foods Card -->
  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6 flex flex-col">
    <div>
      <%= render partial: "shared/icons/add_multiple" %>
      <h3 class="mt-4 text-lg font-semibold leading-6 text-gray-900">Add Multiple Foods</h3>
      <p class="mt-2 text-sm text-gray-500">Select multiple foods from our database to add to your list at once.</p>
    </div>
    <div class="mt-auto pt-6">
      <%= link_to "Choose Multiple Foods",
          select_multiple_user_foods_path,
          class: "block w-full rounded-lg py-3 px-5 bg-blue-600 text-white text-center font-medium cursor-pointer hover:bg-blue-500 transition-colors",
          data: { turbo_frame: "modal" } %>
    </div>
  </div>

  <!-- Select Existing Food Card -->
  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6 flex flex-col">
    <div>
      <%= render partial: "shared/icons/select_existing" %>
      <h3 class="mt-4 text-lg font-semibold leading-6 text-gray-900">Select Existing Food</h3>
      <p class="mt-2 text-sm text-gray-500">Choose a single food from our database to add to your list.</p>
    </div>
    <div class="mt-auto pt-6">
      <%= render partial: "select_existing_food", locals: {
          user_food: @user_food,
          foods: @foods
      } %>
    </div>
  </div>

  <!-- Create New Food Card -->
  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6 flex flex-col">
    <div>
      <%= render partial: "shared/icons/create_new" %>
      <h3 class="mt-4 text-lg font-semibold leading-6 text-gray-900">Create New Food</h3>
      <p class="mt-2 text-sm text-gray-500">Add a new food that doesn't exist in our database yet.</p>
    </div>
    <div class="mt-auto pt-6">
      <%= render partial: "create_new_food" %>
    </div>
  </div>
</div>

<%= turbo_frame_tag "modal" %>
