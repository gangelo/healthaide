<div class="food-item py-2 px-3 hover:bg-gray-50 rounded cursor-pointer mb-1 bg-green-50"
     data-food-selection-target="selectedFood"
     data-food-id="<%= food_id %>"
     data-food-name="<%= food_name %>"
     data-food-display-name="<%= display_name %>"
     data-action="click->food-selection#removeFood">
  <div class="flex items-center">
    <div class="flex-1">
      <div class="text-sm font-medium text-gray-900"><%= food_name %></div>
      <% if qualifiers.present? && qualifiers.any? %>
        <div class="mt-1 flex flex-wrap gap-1">
          <% qualifiers.each do |qualifier| %>
            <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-0.5 text-xs font-medium text-blue-700">
              <%= qualifier %>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="ml-2 text-red-600">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
    </div>
  </div>
</div>