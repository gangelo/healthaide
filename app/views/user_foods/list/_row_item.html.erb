<li id="food-id-<%= user_food.food.id %>" class="relative px-4 py-3 sm:px-6 grid grid-cols-4 gap-4 <%= grid_alternate_row_color(index.to_i) %>">
  <div class="text-sm font-semibold text-gray-900">
    <%= user_food.food.food_name %>
  </div>
  <div class="flex items-center">
    <%= render(Controls::ToggleComponent.new(
      id: "toggle-food-#{user_food.id}",
      checked: user_food.available,
      disabled: false,
      name: "user_food[available]",
      sr_label: "Toggle availability",
      data: {
        toggler_url_value: toggle_available_user_food_path(user_food),
        turbo_method: "patch"
      }
    )) %>
  </div>
  <div class="text-right flex justify-end gap-2">
    <%= button_to user_food_path(user_food),
                method: :delete,
                class: "delete-button-sm",
                form: { data: { turbo_confirm: "Are you sure you want to remove this food?" } } do %>
      Delete
    <% end %>
  </div>
</li>
