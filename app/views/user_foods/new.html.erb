<% content_for :title, "Add Food" %>
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <%= turbo_frame_tag "flash_messages" do %>
    <%= render "shared/flash_messages" %>
  <% end %>

  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">Add Food</h2>
      <p class="mt-1 text-sm text-gray-500 max-w-3xl">Choose from one of the following options to add foods to your personal list.</p>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to "Back to My Foods",
          user_foods_path,
          class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Add Multiple Foods Card -->
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6 flex flex-col">
      <div>
        <%= render partial: "shared/add_multiple_icon" %>
        <h3 class="mt-4 text-lg font-semibold leading-6 text-gray-900">Add Multiple Foods</h3>
        <p class="mt-2 text-sm text-gray-500">Select multiple foods from our database to add to your list at once.</p>
      </div>
      <div class="mt-auto pt-6">
        <%= link_to "Choose Multiple Foods",
            select_multiple_user_foods_path,
            class: "w-full rounded-lg py-3 px-5 bg-blue-600 text-white text-center font-medium cursor-pointer hover:bg-blue-500 transition-colors",
            data: { turbo_frame: "modal" } %>
      </div>
    </div>

    <!-- Select Existing Food Card -->
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6 flex flex-col">
      <div>
        <%= render partial: "shared/select_existing_icon" %>
        <h3 class="mt-4 text-lg font-semibold leading-6 text-gray-900">Select Existing Food</h3>
        <p class="mt-2 text-sm text-gray-500">Choose a single food from our database to add to your list.</p>
      </div>
      <div class="mt-auto pt-6">
        <%= form_with(model: @user_food, url: user_foods_path, class: "w-full") do |form| %>
          <div class="mb-4">
            <%= form.collection_select :food_id,
                @foods,
                :id,
                :food_name,
                { prompt: "Select a food..." },
                class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
          </div>
          <%= form.submit "Add Selected Food",
              class: "w-full rounded-lg py-3 px-5 bg-green-600 text-white font-medium cursor-pointer hover:bg-green-500 transition-colors" %>
        <% end %>
      </div>
    </div>

    <!-- Create New Food Card -->
    <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6 flex flex-col">
      <div>
        <%= render partial: "shared/create_new_icon" %>
        <h3 class="mt-4 text-lg font-semibold leading-6 text-gray-900">Create New Food</h3>
        <p class="mt-2 text-sm text-gray-500">Add a new food that doesn't exist in our database yet.</p>
      </div>
      <div class="mt-auto pt-6">
        <%= form_with(model: @user_food, url: user_foods_path, class: "w-full") do |form| %>
          <div class="mb-4">
            <%= form.text_field :new_food_name,
                placeholder: "Enter new food name",
                class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
          </div>
          <%= form.submit "Create & Add New Food",
              class: "w-full rounded-lg py-3 px-5 bg-amber-600 text-white font-medium cursor-pointer hover:bg-amber-500 transition-colors" %>
        <% end %>
      </div>
    </div>
  </div>

  <% if @user_food.errors.any? %>
    <div class="mt-6 bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg">
      <h2><%= pluralize(@user_food.errors.count, "error") %> prohibited this food from being saved:</h2>
      <ul>
        <% @user_food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= turbo_frame_tag "modal" %>
</div>
