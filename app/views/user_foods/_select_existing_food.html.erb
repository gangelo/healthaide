<%= form_with(model: user_food, id: "select-existing-food-form", url: user_foods_path, class: "w-full") do |form| %>
  <div class="mb-4">
    <%= form.collection_select :food_id,
        foods,
        :id,
        :display_name_with_qualifiers,
        { prompt: "Select a food..." },
        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 w-full" %>
  </div>
  <%= form.submit "Add Selected Food",
      class: "add-existing-button" %>
<% end %>
