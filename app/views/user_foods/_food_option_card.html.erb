<%
# This partial renders a card for selecting food addition options
# Parameters:
# - title: The card title
# - description: The card description
# - icon_partial: The partial path for the icon
%>

<div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6 flex flex-col">
  <div>
    <%= render partial: icon_partial %>
    <h3 class="mt-4 text-lg font-semibold leading-6 text-gray-900"><%= title %></h3>
    <p class="mt-2 text-sm text-gray-500"><%= description %></p>
  </div>
  <div class="mt-auto pt-6">
    <%= yield %>
  </div>
</div>
