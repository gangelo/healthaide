<% content_for :title, "My Foods" %>
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <!-- Flash messages outside of Turbo Frames -->
  <div id="flash_messages">
    <%= render "shared/flash_messages" %>
  </div>
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2>My Foods</h2>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= render partial: "shared/links/add_new_link",
          locals: {
            link_path: new_user_food_path,
            link_text: "Add Food",
          } %>
    </div>
  </div>
  <!-- Single content frame -->
  <%= turbo_frame_tag "main_content" do %>
    <%= render "user_foods/list/list", user_foods: @user_foods %>
  <% end %>
</div>
