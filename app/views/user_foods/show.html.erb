<% content_for :title, "Food Details" %>

<div class="mx-auto md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="bg-white shadow-lg rounded-lg px-8 pt-6 pb-8 mb-4">
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-4xl font-bold">
        <%= @user_food.food.food_name %>
      </h1>
      <div class="flex items-center space-x-2">
        <%= button_to user_food_path(@user_food),
            method: :delete,
            class: "rounded-lg py-3 px-5 bg-red-600 text-white font-medium hover:bg-red-500 transition-colors",
            data: { turbo_confirm: "Are you sure?" } do %>
          Delete Food
        <% end %>
        <%= link_to "Back to My Foods",
            user_foods_path,
            class: "rounded-lg py-3 px-5 bg-gray-100 font-medium hover:bg-gray-50 transition-colors" %>
      </div>
    </div>

    <div class="mb-8">
      <h2 class="text-lg font-semibold mb-4">Food Qualifiers</h2>
      <div class="flex flex-wrap gap-2 mb-4">
        <% @user_food.food.food_qualifiers.each do |qualifier| %>
          <span class="inline-flex items-center gap-x-0.5 rounded-md bg-green-50 px-2 py-1 text-sm font-medium text-green-700 ring-1 ring-green-600/20">
            <%= qualifier.qualifier_name %>
          </span>
        <% end %>
      </div>

      <div class="mt-6">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Add Food Qualifier</h3>
        <div class="space-y-6" data-controller="food-form">
          <%= form_with(url: add_qualifier_user_food_path(@user_food), method: :post, class: "space-y-4") do |form| %>
            <div>
              <%= form.collection_select :food_qualifier_id,
                  FoodQualifier.ordered.where.not(id: @user_food.food.food_qualifiers.pluck(:id)),
                  :id,
                  :qualifier_name,
                  { prompt: "Select a qualifier" },
                  {
                    class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full",
                    data: {
                      food_form_target: "select",
                      action: "change->food-form#handleSelect"
                    }
                  } %>
            </div>

            <div class="relative">
              <div class="absolute inset-0 flex items-center" aria-hidden="true">
                <div class="w-full border-t border-gray-300"></div>
              </div>
              <div class="relative flex justify-center">
                <span class="bg-white px-3 text-base font-semibold leading-6 text-gray-900">Or</span>
              </div>
            </div>

            <div>
              <%= form.text_field :new_qualifier_name,
                  placeholder: "Enter new qualifier name",
                  class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full",
                  data: {
                    food_form_target: "input",
                    action: "input->food-form#handleInput"
                  } %>
            </div>

            <div class="mt-4">
              <%= form.submit "Add Qualifier",
                  class: "w-full rounded-lg py-3 px-5 bg-blue-600 text-white font-medium cursor-pointer hover:bg-blue-500 transition-colors" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
