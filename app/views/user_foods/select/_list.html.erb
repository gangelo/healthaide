<div class="max-h-64 overflow-y-auto">
  <% if foods.any? %>
    <% foods.each do |food| %>
      <div class="flex items-center p-2 hover:bg-gray-50">
        <div class="flex items-center w-full">
          <%= check_box_tag "food_ids[]", food.id, false,
              id: "food_ids_#{food.id}",
              class: "h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500",
              data: { action: "change->select#checkboxChanged" } %>
          <%= label_tag "food_ids_#{food.id}", nil,
              class: "w-full ml-3 flex items-center cursor-pointer" do %>
            <span class="text-sm font-medium text-gray-700"><%= food.food_name %></span>
            <% if food.food_qualifiers.any? %>
              <div class="ml-2 flex flex-wrap gap-1">
                <% food.food_qualifiers.first(3).each do |qualifier| %>
                  <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-0.5 text-xs font-medium text-blue-700">
                    <%= qualifier.qualifier_name %>
                  </span>
                <% end %>
                <% if food.food_qualifiers.count > 3 %>
                  <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-0.5 text-xs font-medium text-gray-600">
                    +<%= food.food_qualifiers.count - 3 %> more
                  </span>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="flex flex-col items-center justify-center p-6 text-center min-h-[16rem]">
      <% if params[:search].present? %>
        <svg class="mx-auto h-10 w-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No results found</h3>
        <p class="mt-1 text-sm text-gray-500">No foods found matching "<%= params[:search] %>". Try a different search term.</p>
      <% else %>
        <svg class="mx-auto h-10 w-10 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 5h16v16H4V5zm4 3h8v2H8V8zm0 4h8v2H8v-2zm0 4h4v2H8v-2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No foods available</h3>
        <p class="mt-1 text-sm text-gray-500">There are no more foods available to add to your list.</p>
      <% end %>
    </div>
  <% end %>
</div>