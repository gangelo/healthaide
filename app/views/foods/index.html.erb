<% content_for :title, "Foods" %>

<div class="w-full">
  <%= render "shared/flash" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Foods</h1>
    <%= link_to "New food", new_food_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div id="foods" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @foods.any? %>
      <% @foods.each do |food| %>
        <div class="flex justify-between items-center">
          <%= render food %>
          <div class="space-x-2">
            <%= link_to "Show", food, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_food_path(food), class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <div class="inline-block">
              <%= button_to "Destroy", food, method: :delete, class: "rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No foods found.</p>
    <% end %>
  </div>
</div>
