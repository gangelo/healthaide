<% content_for :title, "Foods" %>
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <%= turbo_frame_tag "flash_messages" do %>
    <%= render "shared/flash_messages" %>
  <% end %>
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2>Foods</h2>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to new_food_path, class: "add-new-button" do %>
        <%= render partial: "shared/icons/plus_sign" %>
        Add New Food
      <% end %>
    </div>
  </div>
  <!-- Page size selector -->
  <div class="mt-4">
    <%= render "shared/pager_rows" %>
  </div>
  <!-- Paginated content -->
  <%= turbo_frame_tag "pager_results" do %>
    <%= render "foods/list/list", foods: @records %>
  <% end %>
  <!-- Pagination controls -->
  <%= turbo_frame_tag "pagination_controls" do %>
    <%= render "shared/pager",
      pager_pagination_path: @pager_pagination_path,
      pagy: @pagy,
      pager_rows: @pager_rows %>
  <% end %>
</div>
