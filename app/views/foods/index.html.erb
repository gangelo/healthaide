<% content_for :title, "Foods" %>
<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-10">
  <%= turbo_frame_tag "flash_messages" do %>
    <%= render "shared/flash_messages" %>
  <% end %>
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2>Foods</h2>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to new_food_path, class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" do %>
        <%= render partial: "shared/icons/plus_sign" %>
        Add New Food
      <% end %>
    </div>
  </div>
  <div class="bg-white shadow-md ring-1 ring-gray-900/5 rounded-xl overflow-hidden">
    <% if @foods.any? %>
      <div class="divide-y divide-gray-100">
        <!-- Table header -->
        <div class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal px-4 py-3 sm:px-6 grid grid-cols-3 gap-4">
          <div class="text-sm font-medium">Food Name</div>
          <div class="text-sm font-medium">Qualifiers</div>
          <div class="text-sm font-medium text-right">Actions</div>
        </div>
        <!-- Table rows -->
        <ul role="list">
          <% @foods.each_with_index do |food, index| %>
            <li class="relative px-4 py-3 sm:px-6 grid grid-cols-3 gap-4 <%= index.odd? ? 'bg-gray-50' : 'bg-white' %> <%= food.discarded? ? 'bg-red-50' : '' %> hover:bg-gray-100">
              <div class="text-sm font-semibold text-gray-900">
                <%= food.food_name %>
                <% if food.discarded? %>
                  <span class="ml-2 inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/10">
                    Deleted
                  </span>
                <% end %>
              </div>
              <div>
                <% if food.food_qualifiers.any? %>
                  <div class="flex flex-wrap gap-1">
                    <% food.food_qualifiers.each do |food_qualifier| %>
                      <span><%= render(FoodQualifiers::BadgeComponent.new(name: food_qualifier.qualifier_name, size: :md)) %></span>
                    <% end %>
                  </div>
                <% else %>
                  <span class="text-sm text-gray-500">&nbsp;</span>
                <% end %>
              </div>
              <div class="text-right">
                <div class="flex justify-end gap-2">
                  <%= link_to "Show", food_path(food), class: "rounded-lg py-2 px-4 text-gray-700 bg-gray-200 hover:bg-gray-300 font-medium" %>
                  <%= link_to "Edit", edit_food_path(food), class: "rounded-lg py-2 px-4 text-gray-700 bg-gray-200 hover:bg-gray-300 font-medium" %>
                  <% if food.kept? %>
                    <%= button_to "Delete", food_path(food),
                        method: :delete,
                        class: "rounded-lg py-2 px-4 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer",
                        form: { data: { turbo_confirm: "Are you sure? This will remove the food from all users who have added it." } } %>
                  <% else %>
                    <%= button_to "Restore", restore_food_path(food),
                        method: :patch,
                        class: "rounded-lg py-2 px-4 text-white bg-green-600 hover:bg-green-500 font-medium cursor-pointer" %>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="px-6 py-10 text-center text-gray-500">
        <div class="flex items-center justify-center">
          <%= render "shared/icons/smiley", size_class: "h-24 w-24", mouth_type: :frown %>
        </div>
        <h3 class="mt-2 text-sm font-semibold text-gray-900">No foods found</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new food.</p>
        <div class="mt-6">
          <%= link_to new_food_path,
              class: "inline-flex items-center rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" do %>
            <%= render partial: "shared/icons/plus_sign" %>
            Add New Food
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <%= turbo_frame_tag "modal" %>
</div>
