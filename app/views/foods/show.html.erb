<% content_for :title, "Food Details" %>

<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-8">
  <%= render "shared/flash" %>

  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight"><%= @food.food_name %></h1>
      <p class="mt-1 text-sm text-gray-500">Added on <%= @food.created_at.strftime("%B %d, %Y") %></p>
    </div>
    <div class="mt-4 md:ml-4 md:mt-0">
      <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium <%= @food.discarded? ? 'bg-red-100 text-red-800 ring-1 ring-inset ring-red-600/20' : 'bg-green-100 text-green-800 ring-1 ring-inset ring-green-600/20' %>">
        <%= @food.discarded? ? 'Deleted' : 'Active' %>
      </span>
    </div>
  </div>

  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl overflow-hidden">
    <!-- Food qualifiers section -->
    <div class="p-6">
      <h2 class="text-lg font-medium text-gray-900 mb-3">Qualifiers</h2>
      
      <% if @food.food_qualifiers.any? %>
        <div class="flex flex-wrap">
          <% 
            # Create different colors for qualifiers based on their first letter
            colors = ['badge', 'badge-green', 'badge-amber', 'badge-red', 'badge-purple']
            @food.food_qualifiers.ordered.each_with_index do |qualifier, index| 
              color_class = colors[index % colors.length]
          %>
            <span class="<%= color_class %>"><%= qualifier.qualifier_name %></span>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 italic">No qualifiers for this food.</p>
      <% end %>
    </div>

    <!-- Unique identifier section -->
    <div class="border-t border-gray-200 p-6 bg-gray-50">
      <h2 class="text-sm font-medium text-gray-500 uppercase tracking-wider mb-2">Unique Identifier</h2>
      <div class="bg-white rounded-md p-3 font-mono text-sm overflow-auto border border-gray-200">
        <%= @food.unique_signature %>
      </div>
    </div>

    <!-- Action buttons -->
    <div class="border-t border-gray-200 p-6 bg-white flex flex-wrap gap-3">
      <%= link_to edit_food_path(@food), class: "inline-flex items-center rounded-md bg-blue-50 px-3 py-2 text-sm font-semibold text-blue-700 hover:bg-blue-100" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit Food
      <% end %>

      <%= link_to foods_path, class: "inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Foods
      <% end %>

      <% if @food.kept? %>
        <%= button_to @food, method: :delete,
            class: "inline-flex items-center rounded-md bg-red-50 px-3 py-2 text-sm font-semibold text-red-700 hover:bg-red-100",
            form: { data: { turbo_confirm: "Are you sure? This will remove the food from all users who have added it." } } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete Food
        <% end %>
      <% else %>
        <%= button_to restore_food_path(@food), method: :patch,
            class: "inline-flex items-center rounded-md bg-green-50 px-3 py-2 text-sm font-semibold text-green-700 hover:bg-green-100" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Restore Food
        <% end %>
      <% end %>
    </div>
  </div>
</div>