<% content_for :title, "Edit Food" %>
<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8 py-10">
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h1>Edit Food</h1>
      <p class="mt-1 text-sm text-gray-500 max-w-3xl">Update food details and qualifiers.</p>
    </div>
    <div class="mt-4 flex gap-2 md:ml-4 md:mt-0">
      <%= link_to "Show this food", @food, class: "back-button-sm" %>
      <%= link_to "Back to foods", foods_path, class: "back-button-sm" %>
    </div>
  </div>
  <%= render "form", food: @food %>
</div>
