<div id="qualifier-list">
  <% if food.food_qualifiers.any? %>
    <ul class="qualifier-list mb-6">
      <% food.food_qualifiers.by_name.each do |qualifier| %>
        <li class="flex items-center justify-between p-2 mb-2 border rounded">
          <span class="font-medium"><%= qualifier.qualifier_name %></span>
          <%= button_to "Remove", remove_qualifier_food_path(food, qualifier_id: qualifier.id),
                         method: :delete,
                         class: "bg-red-100 text-red-700 px-3 py-1 rounded hover:bg-red-200",
                         form: { style: "display: inline;" } %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="mb-6 text-gray-600 italic">No qualifiers associated with this food.</p>
  <% end %>
</div>
