<%= turbo_frame_tag "add_existing_qualifier" do %>
  <% if available_qualifiers.any? %>
    <%= form_with url: add_qualifier_food_path(food), method: :post do |form| %>
      <div class="flex mb-4">
        <%= form.collection_select :qualifier_id,
                                  available_qualifiers,
                                  :id,
                                  :qualifier_name,
                                  { prompt: "Select a qualifier" },
                                  { class: "flex-grow border rounded px-3 py-2 mr-2" } %>
        <%= form.submit "Add", class: "bg-blue-600 hover:bg-blue-500 text-white px-4 py-2 rounded" %>
      </div>
    <% end %>
  <% else %>
    <p class="text-gray-600 italic">No more qualifiers available to add.</p>
  <% end %>
<% end %>
