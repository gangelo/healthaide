<div class="bg-white shadow-md ring-1 ring-gray-900/5 rounded-xl overflow-hidden">
  <% if user_medications.any? %>
    <div class="divide-y divide-gray-100">
      <!-- Table header -->
      <%= render(Grids::HeaderComponent.new(columns: [ :medication, actions: { css_class: "text-right" } ])) %>
      <!-- Table rows -->
      <%= render partial: "user_medications/list/row", locals: { user_medications: user_medications } %>
    </div>
  <% else %>
    <div class="px-6 py-10 text-center text-gray-500">
      <div class="flex items-center justify-center">
        <%= render "shared/icons/smiley", size_class: "h-24 w-24", mouth_type: :frown %>
      </div>
      <h3 class="mt-2 text-sm font-semibold text-gray-900">No medications added yet</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by adding medications to your list.</p>
      <div class="mt-6">
        <%= render partial: "shared/links/add_new_link",
          locals: {
            link_path: new_user_medication_path,
            link_text: "Add Medication"
          } %>
      </div>
    </div>
  <% end %>
</div>