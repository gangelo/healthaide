<ul role="list">
  <% user_medications.each_with_index do |user_medication, index| %>
    <li id="medication-id-<%= user_medication.medication.id %>" class="relative px-4 py-3 sm:px-6 grid grid-cols-3 gap-4 <%= grid_alternate_row_color(index.to_i) %>">
      <div class="text-sm font-semibold text-gray-900">
        <%= user_medication.medication.medication_name %>
      </div>
      <div>
        Taken <%= user_medication.frequency.humanize.downcase %>
      </div>
      <div class="text-right flex justify-end gap-2">
        <%= link_to "Show", user_medication_path(user_medication),
                class: "show-button-sm",
                data: { turbo_frame: "_top" } %>
        <%= link_to "Edit", edit_user_medication_path(user_medication),
                class: "edit-button-sm",
                data: { turbo_frame: "_top" } %>
        <%= button_to user_medication_path(user_medication),
                method: :delete,
                class: "delete-button-sm",
                form: { data: { turbo_confirm: "Are you sure you want to remove this medication?" } } do %>
          Delete
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
