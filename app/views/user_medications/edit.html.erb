<% content_for :title, "Edit Medication" %>
<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 py-10">
  <%= turbo_frame_tag "flash_messages" do %>
    <%= render "shared/flash_messages" %>
  <% end %>
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="min-w-0 flex-1">
      <h2>Edit Medication</h2>
      <p class="mt-1 text-sm text-gray-500 max-w-3xl">Update the frequency for this medication.</p>
    </div>
    <div class="mt-4 flex md:ml-4 md:mt-0">
      <%= link_to "Back to My Medications",
          user_medications_path,
          class: "back-button-sm" %>
    </div>
  </div>
  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-xl p-6">
    <%= render "form", user_medication: @user_medication %>
  </div>
</div>