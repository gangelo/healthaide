<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <%= render @health_goal %>
    <div class="inline-block">
      <%= link_to "Edit this health goal",  edit_health_goal_path(@health_goal), class: "edit-button" %>
      <%= link_to "Back to health goals", health_goals_path, class: "back-button" %>
      <%= button_to "Delete this health goal", health_goals_path(@health_goal), method: :delete, class: "delete-button", form_class: "inline-block" %>
    </div>
  </div>
</div>
