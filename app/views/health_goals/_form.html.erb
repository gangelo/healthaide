<%= form_with(model: health_goal, class: "contents") do |form| %>
  <% if health_goal.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(health_goal.errors.count, "error") %> prohibited this health goal from being saved:</h2>

      <ul>
        <% health_goal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :health_goal_name %>
    <%= form.text_field :health_goal_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= render partial: "components/buttons/button", locals: {
      type: :submit,
      variant: :primary,
      text: health_goal.persisted? ? "Update health goal" : "Create health goal"
    } %>
  </div>
<% end %>
