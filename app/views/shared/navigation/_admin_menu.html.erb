<div class="relative" data-controller="admin-dropdown">
  <button type="button"
          data-action="admin-dropdown#toggle"
          aria-expanded="false"
          class="<%= nav_link_class('/admin') %> flex items-center gap-1">
    Admin
    <!-- Dropdown icon -->
    <svg class="inline-block h-4 w-4 transition-transform"
         data-admin-dropdown-target="icon"
         fill="none"
         viewBox="0 0 24 24"
         stroke-width="1.5"
         stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
    </svg>
  </button>

  <!-- Admin submenu - hidden by default -->
  <div data-admin-dropdown-target="menu"
       class="hidden absolute left-0 lg:right-0 lg:left-auto mt-2 w-56 rounded-md shadow-lg bg-gray-800 ring-1 ring-black ring-opacity-5 z-50">
    <div class="py-1">
      <%= link_to "Foods", foods_path, class: nav_link_class(foods_path) %>
      <%= link_to "Food Qualifiers", food_qualifiers_path, class: nav_link_class(food_qualifiers_path) %>
      <%= link_to "Health Conditions", health_conditions_path, class: nav_link_class(health_conditions_path) %>
      <%= link_to "Health Goals", health_goals_path, class: nav_link_class(health_goals_path) %>
      <%= link_to "Exports", exports_path, class: nav_link_class(exports_path) %>
    </div>
  </div>
</div>
