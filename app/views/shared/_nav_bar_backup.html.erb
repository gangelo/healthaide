<header class="sticky top-0 z-50 w-full border-b border-gray-200 bg-white/75 backdrop-blur-lg">
  <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center" do %>
          <%= render partial: "shared/site_name" %>
        <% end %>
      </div>

      <div class="hidden md:flex md:items-center md:space-x-6">
        <%= link_to "Home", root_path, class: "text-sm font-medium text-gray-700 hover:text-gray-900" %>
        <% if user_signed_in? %>
          <%= link_to "Foods", foods_path, class: "text-sm font-medium text-gray-700 hover:text-gray-900" %>
          <%= link_to "Food Qualifiers", food_qualifiers_path, class: "text-sm font-medium text-gray-700 hover:text-gray-900" %>
        <% else %>
          <a href="#" class="text-sm font-medium text-gray-700 hover:text-gray-900">Features</a>
          <a href="#" class="text-sm font-medium text-gray-700 hover:text-gray-900">Pricing</a>
          <a href="#" class="text-sm font-medium text-gray-700 hover:text-gray-900">FAQs</a>
          <a href="#" class="text-sm font-medium text-gray-700 hover:text-gray-900">About</a>
        <% end %>
      </div>

      <div class="flex items-center space-x-4">
        <div class="hidden md:block">
          <div class="relative">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
              <svg class="h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
              </svg>
            </div>
            <input type="search" class="block w-full rounded-md border-0 py-1.5 pl-10 pr-3 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-600 sm:text-sm sm:leading-6" placeholder="Search..." aria-label="Search">
          </div>
        </div>

        <% if user_signed_in? %>
          <%= link_to "Logout",
                    destroy_user_session_path,
                    class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50",
                    data: {
                      turbo_method: :delete,
                      confirm: "Are you sure?",
                      turbo_confirm: "Are you sure?"
                    } %>
          <%= link_to "Profile",
                    edit_user_registration_path,
                    class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600",
                    data: {
                      action: "nav-bar#navigate"
                    } %>
        <% else %>
          <%= link_to "Login",
                    new_user_session_path,
                    class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50",
                    data: {
                      action: "nav-bar#navigate"
                    } %>
          <%= link_to "Sign-up",
                    new_user_registration_path,
                    class: "rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600",
                    data: {
                      action: "nav-bar#navigate"
                    } %>
        <% end %>

        <!-- Mobile menu button -->
        <div class="flex md:hidden">
          <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700" data-action="nav-bar#toggleMobileMenu">
            <span class="sr-only">Open main menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Mobile menu -->
  <div class="md:hidden hidden" data-nav-bar-target="mobileMenu">
    <div class="space-y-1 px-2 pb-3 pt-2">
      <%= link_to "Home", root_path, class: "block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900" %>
      <% if user_signed_in? %>
        <%= link_to "Foods", foods_path, class: "block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900" %>
        <%= link_to "Food Qualifiers", food_qualifiers_path, class: "block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900" %>
      <% else %>
        <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900">Features</a>
        <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900">Pricing</a>
        <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900">FAQs</a>
        <a href="#" class="block rounded-md px-3 py-2 text-base font-medium text-gray-700 hover:bg-gray-50 hover:text-gray-900">About</a>
      <% end %>
    </div>
  </div>
</header>
