<%
  mouth = local_assigns.fetch(:mouth_type, :smile)
%>
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="<%= local_assigns.fetch(:size_class, 'h-5 w-5') %>">
  <circle cx="10" cy="10" r="8" fill="none" stroke="currentColor" stroke-width="1.5" />
  <circle cx="7" cy="8" r="1" fill="currentColor" />
  <circle cx="13" cy="8" r="1" fill="currentColor" />
  <% if mouth == :frown %>
    <path d="M7 13.5C7 13.5 8.5 11.5 10 11.5C11.5 11.5 13 13.5 13 13.5" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
  <% elsif mouth == :uh_oh %>
    <circle cx="10" cy="12.5" r="1.5" fill="none" stroke="currentColor" stroke-width="1.5" />
  <% else %>
    <path d="M7 12.5C7 12.5 8.5 14.5 10 14.5C11.5 14.5 13 12.5 13 12.5" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
  <% end %>
</svg>
