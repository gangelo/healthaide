<ul role="list">
  <% health_conditions.each_with_index do |health_condition, index| %>
    <li class="relative px-4 py-3 sm:px-6 grid grid-cols-2 gap-4 <%= grid_alternate_row_color(index) %>">
      <div class="text-sm font-semibold text-gray-900">
        <%= health_condition.health_condition_name %>
      </div>
      <div class="text-right flex justify-end gap-2">
        <%= link_to "Show", health_condition_path(health_condition),
                      class: "show-button-sm",
                      data: { turbo_frame: "_top" } %>
        <%= link_to "Edit", edit_health_condition_path(health_condition),
                      class: "edit-button-sm",
                      data: { turbo_frame: "_top" } %>
        <%= button_to "Delete", health_condition_path(health_condition),
                        method: :delete,
                        class: "delete-button-sm",
                        form: { data: { turbo_confirm: "Are you sure? This will remove the health condition from all users who are using it." } } %>
      </div>
    </li>
  <% end %>
</ul>
