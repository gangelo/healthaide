<ul role="list">
  <% food_qualifiers.each_with_index do |food_qualifier, index| %>
    <li class="relative px-4 py-3 sm:px-6 grid grid-cols-2 gap-4 <%= index.odd? ? 'bg-gray-50' : 'bg-white' %> hover:bg-gray-100">
      <div class="text-sm font-semibold text-gray-900">
        <%= food_qualifier.qualifier_name %>
      </div>
      <div class="text-right flex justify-end gap-2">
        <%# TODO: Use turbo on this? %>
        <%= link_to "Show", food_qualifier_path(food_qualifier), class: "show-button-sm", data: { turbo: false } %>
        <%# TODO: Use turbo on this? %>
        <%= link_to "Edit", edit_food_qualifier_path(food_qualifier), class: "edit-button-sm", data: { turbo: false } %>
        <%= button_to "Delete", food_qualifier_path(food_qualifier),
                    method: :delete,
                    class: "delete-button-sm",
                    form: { data: { turbo_confirm: "Are you sure?" } } %>
      </div>
    </li>
  <% end %>
</ul>
